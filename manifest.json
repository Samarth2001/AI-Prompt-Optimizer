{
  "manifest_version": 3,
  "name": "Prompt Enhancer",
  "short_name": "Enhancer",
  "version": "1.0",
  "description": "Enhances prompts on various websites. Permission justification: 'storage' is used to save preferences and passphrase-protected keys.",
  "minimum_chrome_version": "102",
  "permissions": [
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://prompt-enhancer-worker.prompt-enhance-api.workers.dev/"
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; script-src 'self' 'wasm-unsafe-eval'; style-src 'self' 'unsafe-inline'; connect-src 'self' https://prompt-enhancer-worker.prompt-enhance-api.workers.dev https://openrouter.ai; frame-src 'self'; object-src 'none';"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://claude.ai/*",
        "*://*.claude.ai/*",
        "*://chat.openai.com/*",
        "*://*.chat.openai.com/*",
        "*://chatgpt.com/*",
        "*://*.chatgpt.com/*",
        "*://gemini.google.com/*",
        "*://*.gemini.google.com/*",
        "*://grok.com/*",
        "*://*.grok.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "config/site-config.js",
        "utils/dom-utils.js"
      ],
      "matches": [
        "*://claude.ai/*",
        "*://*.claude.ai/*",
        "*://chat.openai.com/*",
        "*://*.chat.openai.com/*",
        "*://chatgpt.com/*",
        "*://*.chatgpt.com/*",
        "*://gemini.google.com/*",
        "*://*.gemini.google.com/*",
        "*://grok.com/*",
        "*://*.grok.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 